<h3><?php echo date("Y");?> Formula One World Championship F1 Buzz Prediction Game Standings</h3>

<div class="standings">
<table>
    <thead>
    <tr>
        <th>Pos</th>
        <th>User</th>

        <?php foreach ($this->aRaces as $race): ?>
        <th><?php echo $race->location->shortName; ?></th>
        <?php endforeach ?>

        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    <?php $rank = 1; ?>
    <?php foreach ($this->aStandings as $userId => $row): ?>
    <tr <?php echo $rank % 2 != 0 ? 'class="odd"' : ''; ?> >
        <td><?php echo $rank++; ?></td>
        <td><a target="_top" href="http://www.facebook.com/profile.php?id=<?php echo $this->facebookId($userId); ?>"><fb:profile-pic uid="<?php echo $this->facebookId($userId); ?>" linked="false"></fb:profile-pic></a></td>
        <?php foreach ($row as $raceId => $points): ?>
        <td><?php echo $points; ?></td>
        <?php endforeach ?>
        <td><?php echo array_sum($row); ?></td>
    </tr>
    <?php endforeach ?>
    </tbody>
</table>
</div>